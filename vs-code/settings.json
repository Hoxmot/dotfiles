{
    "editor.bracketPairColorization.enabled": true,
    "editor.columnSelection": false,
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'JetBrains Mono', 'DejaVu Sans Mono','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.largeFileOptimizations": false,
    "editor.multiCursorModifier": "alt",
    "editor.padding.bottom": 0.6,
    "editor.padding.top": 0.6,
    "editor.suggestSelection": "first",
    "git.autoStash": true,
    "git.rebaseWhenSync": true,
    "haskell.manageHLS": "GHCup",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "todo.statistics.project.enabled": false,
    "workbench.colorTheme": "Dracula",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.iconTheme": "material-icon-theme",
    "[astro]": {
        "editor.rulers": [80],
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
    },
    "[haskell]": {
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
        "editor.rulers": [
            90
        ],
        "editor.defaultFormatter": "vigoo.stylish-haskell"
    },
    "[javascript]": {
        "editor.rulers": [80, 120],
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
    },
    "[javascriptreact]": {
        "editor.rulers": [80, 120],
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
    },
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.tabSize": 2,
        "editor.detectIndentation": false
    },
    "[prolog]": {
        "editor.rulers": [80]
    },
    "[python]": {
        "editor.formatOnType": true
    },
    "[sql]": {
        "editor.tabSize": 2,
        "editor.detectIndentation": false
    },
    "[todo]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.wordWrap": "on"
    },
    "[typescript]": {
        "editor.rulers": [80, 120],
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.rulers": [80, 120],
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
}
